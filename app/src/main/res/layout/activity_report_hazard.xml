<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.common.ReportHazardActivity"
    android:id="@+id/over_layout_report_hazard">


    <ImageView
        android:id="@+id/btnClose_report_hazard"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/imvReportHazard_report_hazard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_btn_report_hazard"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_report_hazard"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvTitle_report_hazard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvReportHazard_report_hazard"
        android:layout_centerHorizontal="true"
        android:text="NGUY HIỂM"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/textColorSecondary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="247dp"
        android:background="@color/textColorSecondary"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_report_button"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imvHazardOnRoad_report_hazard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imHazardOnRoad_report_hazard"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_hazard_road" />

                <TextView
                    android:id="@+id/tvHazardOnRoad_report_hazard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trên đường"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/textColorSecondary" />

            <LinearLayout
                android:id="@+id/imvHazardShoulder_report_hazard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imHazardShoulder_report_hazard"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_hazard_shoulder" />

                <TextView
                    android:id="@+id/tvHazardShoulder_report_hazard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bên lề"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/textColorSecondary" />

            <LinearLayout
                android:id="@+id/imvHazardWeather_report_hazard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imHazardWeather_report_hazard"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_hazard_weather" />

                <TextView
                    android:id="@+id/tvHazardWeather_report_hazard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Thời tiết"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/textColorSecondary"
            android:visibility="visible" />

    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="80dp"-->
