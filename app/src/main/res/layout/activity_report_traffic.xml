<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.common.ReportTrafficActivity">

    <!-- old value #8d000000 -->

    <ImageView
        android:id="@+id/btnClose_report_traffic"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/imvReportTraffic_report_traffic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_btn_report_traffic"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_report_traffic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvReportTraffic_report_traffic"
        android:layout_centerHorizontal="true"
        android:text="KẸT XE"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/textColorSecondary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="247dp"
        android:background="@color/textColorSecondary"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_report_button"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imvTrafficModerate_report_traffic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_traffic_moderate" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trung bình"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/textColorSecondary" />

            <LinearLayout
                android:id="@+id/imvTrafficHeavy_report_traffic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_traffic_heavy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nặng"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/textColorSecondary" />

            <LinearLayout
                android:id="@+id/imvTrafficStandstill_report_traffic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_traffic_standstill" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kẹt cứng"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/textColorSecondary"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/button_bg_inactive"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDismiss_report_traffic"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_dismiss"
            android:text="HUỶ"
            android:textColor="@color/background_front"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSend_report_traffic"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_send"
            android:drawableEnd="@drawable/btn_send_44dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="GỬI"
            android:textColor="@color/background_front"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCommand_report_traffic"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="105dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_record_report_traffic"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_sound" />

            <TextView
                android:id="@+id/tvRecord_report_traffic"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Thu âm"
                android:textAlignment="center" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/textColorSecondary"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout_take_photo_report_traffic"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_take_photo" />

            <TextView
                android:id="@+id/tvTakePhoto_report_traffic"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Chụp ảnh"
                android:textAlignment="center" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/textColorSecondary"
            android:visibility="visible" />

        <EditText
            android:id="@+id/txtMess_report_traffic"
            android:layout_width="110dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            android:hint="Thêm lời ghi chú"
            android:inputType="textPersonName"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp" />

    </LinearLayout>


    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutCommand_report_traffic"
        android:layout_marginTop="-100dp"
        android:background="@color/textColorSecondary"
        android:visibility="visible" />


</RelativeLayout>