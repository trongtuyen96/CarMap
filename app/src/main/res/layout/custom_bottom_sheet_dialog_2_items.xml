<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/tvTitle_report_2_items"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Báo cáo tài xế khác"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorSecondary"
        android:layout_below="@+id/tvTitle_report_2_items"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_below="@+id/divider4"
        android:layout_marginStart="4dp">

        <LinearLayout
            android:id="@+id/imvFrame1_2_items"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_report_other_careless_driver"
                android:id="@+id/imFrame1_2_items"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tài xế chạy ẩu"
                android:textAlignment="center"
                android:textColor="@color/textColorSecondary"
                android:textSize="18sp"
                android:id="@+id/tvFrame1_2_items"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/textColorSecondary" />

        <LinearLayout
            android:id="@+id/imvFrame2_2_items"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_bird"
                android:id="@+id/imFrame2_2_items"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding = "14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bồ câu"
                android:textAlignment="center"
                android:textColor="@color/textColorSecondary"
                android:textSize="18sp"
                android:id="@+id/tvFrame2_2_items"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>