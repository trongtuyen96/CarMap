<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.common.ReportHelpActivity">

    <ImageView
        android:id="@+id/btnClose_report_help"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/imvReportHelp_report_help"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_btn_report_assistance"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_report_assistance" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvReportHelp_report_help"
        android:layout_centerHorizontal="true"
        android:text="GIÚP ĐỠ"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/textColorSecondary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="247dp"
        android:background="@color/textColorSecondary"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_report_button"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imvOthers_report_help"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imOthers_report_help"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_assistance_others" />

                <TextView
                    android:id="@+id/tvOthers_report_help"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tài xế khác"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/textColorSecondary" />

            <LinearLayout
                android:id="@+id/imvCall_report_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_report_assistance_emergency_call" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Gọi điện"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/textColorSecondary"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/button_bg_inactive"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDismiss_report_help"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_dismiss"
            android:text="HUỶ"
            android:textColor="@color/background_front"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSend_report_help"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_send"
            android:drawableEnd="@drawable/btn_send_44dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="GỬI"
            android:textColor="@color/background_front"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtMess_report_help"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="105dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_message_grey_44dp"
        android:hint="Thêm lời ghi chú"
        android:inputType="textPersonName"
        android:paddingEnd="8dp"
        android:paddingStart="0dp"
        android:textColor="@color/textColorSecondary" />


    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMess_report_help"
        android:layout_marginTop="-100dp"
        android:background="@color/textColorSecondary"
        android:visibility="visible" />


</RelativeLayout>