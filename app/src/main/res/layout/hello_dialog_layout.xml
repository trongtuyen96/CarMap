<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_to_remove_hello_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_remove_transparent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="274dp"
        android:background="@drawable/bg_btn_send"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imImage_hello_dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn_report_hazard"
            android:padding="6dp"
            android:src="@drawable/ic_report_hazard_stopped" />

        <!--<View-->
        <!--android:id="@+id/divider5"-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginEnd="2dp"-->
        <!--android:layout_marginStart="2dp"-->
        <!--android:background="@color/textColorSecondary" />-->


        <TextView
            android:id="@+id/tvEmail_hello_dialog"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/background_front" />


        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/background_front" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="...ĐÃ CHÀO BẠN"
            android:textAlignment="center"
            android:textColor="@color/background_front"
            android:textSize="14sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnHello_hello_dialog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn_white"
            android:text="Chào lại"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnOther_hello_dialog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn_white"
            android:text="GIAO TIẾP KHÁC"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>